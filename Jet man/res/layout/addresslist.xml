<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="1dip"
    android:textColor="@color/black" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:background="#CAE1FF"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imagePerson"
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:paddingTop="5dip"
            android:src="@drawable/person"
            android:textColor="@color/black" >
        </ImageView>

        <TextView
            android:id="@+id/TxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5.0"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="10pt" 
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/imageViewSave"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_gravity="right"
            android:layout_weight="1.0"
            android:src="@android:drawable/ic_menu_add"
            android:textColor="@color/black" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowEntPhone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dip" >

        <ImageView
            android:id="@+id/imageEntPhone"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="12dip"
            android:paddingTop="5dip"
            android:src="@drawable/entphone" />

        <TextView
            android:id="@+id/TxtEntPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dip"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="10pt" 
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowPhone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dip" >

        <ImageView
            android:id="@+id/imagePhone"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="12dip"
            android:paddingTop="5dip"
            android:src="@drawable/telephone" />

        <TextView
            android:id="@+id/TxtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dip"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="10pt" 
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowMobile"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingTop="2dip" >

        <ImageView
            android:id="@+id/imageMobile"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="12dip"
            android:paddingTop="5dip"
            android:src="@drawable/mobile" />

        <TextView
            android:id="@+id/TxtMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dip"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="10pt" 
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowEmail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dip" >

        <ImageView
            android:id="@+id/imageMobile"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="12dip"
            android:paddingTop="5dip"
            android:src="@drawable/email" />

        <TextView
            android:id="@+id/TxtEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dip"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="10pt" 
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>